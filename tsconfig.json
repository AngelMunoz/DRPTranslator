{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "charset": "UTF-8",
        "outDir": "dist",
        "target": "es5"
    },
    "files": [
        "src/index.ts",
        "tests/index.test.ts",
        "typings/browser.d.ts",
        "typings/browser/ambient/chai/index.d.ts",
        "typings/browser/ambient/mocha/index.d.ts",
        "typings/main.d.ts",
        "typings/main/ambient/chai/index.d.ts",
        "typings/main/ambient/mocha/index.d.ts"
    ],
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "!dist/**"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": true
    }
}
