{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "charset": "UTF-8",
        "outDir": "dist",
        "target": "es5"
    },
    "files": [
        "src/symbols/Codon.ts",
        "src/symbols/Symbols.ts",
        "src/translators/DnaTranslator.ts",
        "src/translators/RnaTranslator.ts",
        "tests/index.test.ts",
