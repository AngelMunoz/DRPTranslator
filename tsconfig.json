{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "charset": "UTF-8",
        "outDir": "dist",
        "target": "es5"
    },
    "files": [
        "src/index.ts",
        "tests/index.test.ts",
        "typings/chai/chai.d.ts",
        "typings/mocha/mocha.d.ts",
        "typings/tsd.d.ts"
    ],
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "!dist/**"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": true
    }
}
