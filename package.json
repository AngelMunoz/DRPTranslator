{
  "name": "drptranslator",
  "description": "A DNA-RNA-Protein translator library",
  "main": "dist/src/index.js",
  "typings": "dist/src/index",
  "scripts": {
    "install:deps": "npm install && node_modules/.bin/typings install",
    "build": "node_modules/.bin/tsc -p .",
    "commit": "git-cz",
    "test:watch": "mocha dist/tests/index.test.js -w",
    "test:single": "node_modules/.bin/istanbul cover -x *.test.js --hook-run-in-context node_modules/mocha/bin/_mocha -- -R spec dist/tests/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "devSetup": "node_modules/.bin/typings install && node_modules/.bin/tsc -p . &&  npm run test:single"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AngelMunoz/DRPTranslator.git"
  },
  "keywords": [
    "DNA",
    "RNA",
    "Protein",
    "Translator",
    "Typescript"
  ],
  "author": "Angel D. Munoz <'scythes.lol@gmail.com'> (http://angelmunoz.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AngelMunoz/DRPTranslator/issues"
  },
  "homepage": "https://github.com/AngelMunoz/DRPTranslator#readme",
  "devDependencies": {
    "chai": "3.5.0",
    "commitizen": "2.7.2",
    "cz-conventional-changelog": "1.1.5",
    "ghooks": "1.0.3",
    "istanbul": "0.4.2",
    "mocha": "2.4.5",
    "semantic-release": "^4.3.5",
    "standard": "^8.2.0",
    "typescript": "^2.0.3",
    "typings": "^1.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single"
    }
  }
}
